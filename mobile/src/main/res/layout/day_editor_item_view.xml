<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_editor_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/day_editor_item_done"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:contentDescription="@string/description_day_editor_item_done_image"
        android:enabled="true"
        android:src="@drawable/ic_done_black_24dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/day_editor_item_label"
        style="@style/day_editor_text_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/pressable_view"
        android:enabled="true"/>

    <TextView
        android:id="@+id/day_editor_item_value"
        style="@style/day_editor_text_view"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:background="@drawable/pressable_view"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/day_editor_item_value_edit_button"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:background="@drawable/pressable_view"
        android:contentDescription="@string/description_day_editor_item_value_edit_button"
        android:padding="14dp"
        android:src="@android:drawable/ic_menu_edit"/>
</LinearLayout>

