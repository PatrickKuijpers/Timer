<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fragment_full_screen_with_scrollview"
    tools:context="nl.tcilegnar.timer.fragments.WeekOverviewFragment">

    <RelativeLayout
        android:id="@+id/week_number_and_total_value_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin">

        <TextView
            android:id="@+id/week_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/week_label"
            android:textSize="@dimen/text_size_week_overview"/>

        <TextView
            android:id="@+id/week_number_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/week_number"
            android:textSize="@dimen/text_size_week_overview"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/total_value_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/total_value"
            android:text="@string/total_label"
            android:textSize="@dimen/text_size_day_editor"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/text_size_day_editor"
            android:visibility="gone"/>
    </RelativeLayout>

    <include
        android:id="@+id/week_overview_list_header"
        layout="@layout/viewholder_week_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/week_number_and_total_value_container"
        android:layout_marginTop="@dimen/vertical_margin"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/week_overview_list_header"
        android:background="@color/grey_very_dark"/>

    <ListView
        android:id="@+id/week_overview_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/week_overview_list_header"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/vertical_margin"/>

    <TextView
        android:id="@+id/version_nr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:textColor="@color/grey_medium"
        android:textSize="@dimen/text_size_small"/>
</RelativeLayout>
